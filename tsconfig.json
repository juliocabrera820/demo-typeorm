{
  "compilerOptions": {
    "target": "es2017",                       
    "module": "commonjs",                  
    "lib": ["ES6"],                          
    "allowJs": true,                    
    "outDir": "./dist",                     
    "rootDir": "./src",                    
    "removeComments": true,             
    "strict": true,                        
    "strictNullChecks": false,                             
    "esModuleInterop": true,               
    "resolveJsonModule": true,
    "experimentalDecorators": true,     
    "emitDecoratorMetadata": true,      
    "skipLibCheck": true,                  
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*":["./src/controllers/*"],
      "@models/*":["./src/models/*"],
      "@config/*":["./src/config/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
